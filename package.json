{
  "name": "pixelite",
  "version": "1.0.0",
  "description": "Collaborative Pixel Art Editor",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "node build.js --all --debug",
    "build:all": "node build.js --all --debug",
    "build:web": "node build.js --web --debug",
    "build:cordova": "node build.js --cordova --debug --no-install",
    "build:min": "node build.js --all --minify --debug",
    "build:dev": "node build.js --none --debug",
    "build:release": "node build.js --all --minify --zipalign",
    "serve": "python -m http.server 3000",
    "dev": "npm run build:dev && npm run serve:dist",
    "dev:fast": "npm run serve:src",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist && rm -f *.zip *.apk"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "nodemon": "^3.1.14",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  }
}
